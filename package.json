    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
